{
	"name": "ccsp-prototype-ui",
	"version": "1.0.0",
	"description": "Prototype for CSSP",
	"main": "",
	"dependencies": {
		"angular": "^1.7.9",
		"angular-animate": "^1.7.6",
		"angular-datatables": "^0.6.4",
		"angular-resource": "^1.7.6",
		"angular-route": "^1.7.6",
		"lodash": "^4.17.15",
		"moment": "^2.24.0",
		"ui-bootstrap4": "^3.0.6"
	},
	"devDependencies": {
		"csscomb": "^4.2.0",
		"http-server": "^0.12.3",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.1",
		"prettier": "1.16.1"
	},
	"scripts": {
		"start": "http-server . -a localhost -p 8000 -c-1"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:JanDW/ccsp-ui.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"components/**/*.{js,json,html}": [
			"prettier --write",
			"git add -A"
		],
		"employee-ui/**/*.{js,json,html}": [
			"prettier --write",
			"git add -A"
		],
		"components/**/*.css, employee-ui/**/*.css": [
			"csscomb --tty-mode --",
			"git add -A"
		]
	},
	"author": "Jan De Wilde",
	"license": ""
}
